    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>egis.snk</AssemblyOriginatorKeyFile>
    <DelaySign>false</DelaySign>
    <Version>1.2.0</Version>
    <Authors>Winston Fletcher</Authors>
    <Company>Easy GIS .NET</Company>
